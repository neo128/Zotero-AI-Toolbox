# ==============================
# PaperPilot: Zotero-only profile
# Copy to .env and fill values.
# ==============================

# --- Required: Zotero ---
ZOTERO_USER_ID=1234567
ZOTERO_API_KEY=replace_with_your_zotero_api_key

# Optional: user/group (default is user in most scripts)
ZOTERO_LIBRARY_TYPE=user

# Optional: local storage path for attachments/PDF export
ZOTERO_STORAGE_DIR=~/Zotero/storage

# --- Optional: AI provider (for summarize/sync enrichment) ---
AI_PROVIDER=doubao
AI_MODEL=bot-xxxxxxxxxxxxxxxx
ARK_API_KEY=replace_with_your_ark_api_key
AI_API_KEY=
AI_BASE_URL=

# --- Optional: metadata/PDF enrichment ---
UNPAYWALL_EMAIL=you@example.com
